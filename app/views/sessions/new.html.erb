<% provide(:title, 'Sign In') %>
<h1>Sign In</h1>

<%= form_for :session, url: login_path do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "Sign In" %>
  </p>
<% end %>

<p>New user? <%= link_to 'Sign up now!', register_path %></p>

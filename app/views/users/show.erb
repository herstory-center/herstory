<div class="container">
<h2> Welcome <%= @user.username %> !  <img src="<%= @user.avatar %>"/></h2>

  <div class ="restaurants">
    <h3> Your Favorite Restaurants </h3>

    <ul>
      <% @restaurants.each do |restaurant| %>
        <div class="restaurants row text-left">
        <div class="col-sm-4">
          <li>
            <a href="/restaurants/<%=restaurant.id %>"><h3><%= restaurant.name %></h3></a>
          </div>
          <div class="col-sm-2" >
                    <%= erb :'restaurants/_user_edit_delete', layout: false, locals: {restaurant: restaurant} %>
          </div>
        </div>


      </li>
        </div>
      <% end %>
    </ul>
  </div>
